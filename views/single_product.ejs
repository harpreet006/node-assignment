<!DOCTYPE HTML>
<html>
	<head>
		<title>List Page - Industrious by TEMPLATED</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<%-include('templates/headstyle')%>		 
	</head>
	<body class="is-preload">
		<!-- Header -->
		<%-include('templates/header')%>
		<!-- Heading -->
			<div id="heading" >
				<h1>Single Product Page</h1>
			</div>
		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="inner">
					<div class="content">						
						<div class="table-wrapper">					 
								<div class="row">
									<div class="col-6 col-12-medium">
										<div class="product-display <%=products[0].name%>">
											<img src="/uploads/<%=products[0].product_image%>">
										</div>
									</div>
									<div class="col-6 col-12-medium">
										<p><strong>Name:</strong><%=products[0].name%></p>
										<p><strong>Price:</strong><%=products[0].price%></p>
										<p><strong>Categorie:</strong><%=products[0].categories%></p>
										<p><strong>Description:</strong><%=products[0].description%></p>
										<button class="addtocart" data-id='<%=products[0].id%>'>Add to Cart</button>
									</div>
								</div>	
							 
						</div>
					</div>
				</div>				
			</section>
		<!-- Footer -->
		 <%-include('templates/footer')%>
		<!-- Scripts -->
		<%-include('templates/footerjs')%>
	</body>
</html>